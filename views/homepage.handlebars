<div class="container custom-welcome">
  <div class="row d-flex justify-content-center custom-welcome">
    <h1 class="header-text text-center text-shadow">Create A Wish List</h1>
  </div>
</div>

<br>

<div class="row d-flex justify-content-center">
  <hr class="w-75">
</div>


<div id="img-container">
    <img class="click-img-1" src="/images/baby-shower.jpeg" alt=""> 
    <img class="click-img-2" src="/images/birthday.png" alt="">
    <img class="click-img-3" src="/images/wedding.png" alt="">
    <img class="click-img-4" src="/images/holidays.png" alt="">
</div>
      

<div class="row d-flex justify-content-center">
  <hr class="w-75">
</div>

<br>

<div class="container custom-welcome">
  <div class="row d-flex justify-content-center">
    <h2>User Registries</h2>
  </div>
</div>

<br>

<div class="row d-flex justify-content-center">
  <hr class="w-75">
</div>

<br> <br> <br>

<div class="container custom-home-reg">
  <ul>
    {{#each registries as |registry| }}
    <li class="flex-row p-5">
      <div class="card shadow">
        <div class="card-header text-center">
          <h4>
            <a href="/registry/{{registry.id}}">{{registry.name}}</a>
          </h4>
          <h5>By: {{registry.user.username}}</h5>
            <h6>
            <button class="btn" type="button" data-toggle="collapse" data-target="#collapse{{registry.id}}" aria-expanded="false" aria-controls="collapse{{registry.id}}">
              Show More &#9662;
            </button>
        </div>
        <div class="collapse" id="collapse{{registry.id}}">
          <div class="card-body text-center">
            <br>
            <p>{{registry.description}}</p>
            <br>
          </div>
          <div class="card-footer text-center">
            <br>
            <p>{{ getDate registry.date}}</p>
            <br>
          </div>
        </div>
    </li>
    {{/each}}
  </ul>
</div>


