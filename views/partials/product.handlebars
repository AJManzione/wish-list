<div class="container pt-3">
    <div class="row d-flex justify-content-center">
        <div class="card w-100 h-25 shadow-sm">
            <div class="card-body">
                <ul>
                    <li class="pt-1">
                        <h3>{{name}}</h3>
                    </li>
                    {{#if (displayLink link)}}
                    <li>
                        Link: <a href="{{link}}">{{link}}</a>
                    </li>
                    {{/if}}
                    <li class="pt-1">
                        Price: {{price}}
                    </li>
                    <li class="pt-1">
                        Category: {{category.name}}
                    </li>
                </ul>
                {{#if isOwned}}
                <button class="pl-5 pr-5 btn-primary mt-3 rounded" data-toggle="modal" data-target="" id="product-edit"
                    data-id="{{id}}">Edit</button>
                <button class="pl-5 pr-5 btn-primary mt-3 rounded" data-toggle="modal" data-target="#delete-product"
                    id="product-delete" data-id="{{id}}">Delete</button>
                {{/if}}
            </div>
        </div>
    </div>
</div>