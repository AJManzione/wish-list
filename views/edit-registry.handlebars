<div class="container mt-5">
    <div class="row d-flex justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h2 class="text-center header-text">New Registry</h2>
                </div>
                <div class="card-body">
                    <form class="new-reg">
                        <label for="reg-name" class="label">Name your registry</label>
                        <br>
                        <input type="text" class="w-100 entry-field rounded text-input" id="reg-name" value={{registry.name}} />
                        <br><br>
                        <label for="reg-desc" class="label">Describe your registry</label>
                        <br>
                        <textarea class="form-control " aria-label="With textarea" id="desc">{{registry.description}}</textarea>
                        <br>
                        <label for="date">Registry expiration</label>
                        <br>
                        <p>Date: <input type="text" id="datepicker" value={{registry.date}}></p>
                        <div class="card-footer d-flex justify-content-center">
                            <button id="create-registry-btn" class="btn btn-primary">Submit</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="/javascript/edit-registry.js"></script>