<div class="container">
    <div class="row d-flex justify-content-center">
        <div class="col-lg-9">
            <div class="card shadow d-flex justify-content-center">
                <div class="card-header">
                    <div id="registryID" style="display:none">{{registry.id}}</div>
                    <h2 class="text-center">{{registry.name}}</h2>
                </div>
                <div class="card-body">
                    <p class="text-center">{{registry.description}}</p>
                    <ul>
                        <li class="text-center">
                            <a type="button" data-toggle="modal" data-target="#add-product">
                                <button class="pl-5 pr-5 btn-primary mt-3 rounded">Add Product</button>
                            </a>
                            <button id='edit-btn' class="btn-primary w-25 mt-3 rounded">Edit Registry</button>
                            <a type="button" data-toggle="modal" data-target="#delete-registry">
                                <button class="pl-5 pr-5 btn-primary mt-3 rounded">Delete Registry</button>
                            </a>

                        </li>
                        <li>
                            {{!-- STYLE THIS --}}
                            {{#if hasProducts}}
                            {{#each registry.products as |product|}}
                            {{> product}}
                            {{/each}}
                        </li>
                        <li>
                            {{else}}
                            <br><br>
                            <p class="text-center">Add products to your registry!</p>
                        </li>
                        {{/if}}
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

{{!-- ADD PRODUCT Modal --}}

<div class="modal fade" id="add-product" tabindex="-1" role="dialog" aria-labelledby="add-product" aria-hidden="true">
    <div class="modal-dialog shadow" role="document">
        <div class="modal-content secondary-background">
            <div class="modal-header d-flex justify-content-center">
                <h2 class="modal-title header-text text-shadow">Add a Product</h2>
                <div>
                    <button type="button" class="btn" data-dismiss="modal">
                        X
                    </button>
                </div>
            </div>
            <div class="modal-body">
                <div class="container">
                    <div class="row">
                        <div class="col-lg-12">
                            <form class="signup-form" id="add-product-form">
                                <label for="name">Product Name:</label>
                                <input type="product-name" class="w-100 text-input mb-2" id="product-name">
                                <label for="price">Price:</label>
                                <input type="product-price" class="w-100 text-input" id="product-price"
                                    placeholder="$0.00">
                                <br>
                                <div class="mt-4 mb-2">
                                    <label for="categories">Choose a Category:</label>
                                    <select name="categories" id="categories">
                                        <option value="1">Books</option>
                                        <option value="2">Toys</option>
                                        <option value="3">Electronics</option>
                                        <option value="4">Home Goods</option>
                                        <option value="5">Appliances</option>
                                        <option value="6">Kitchen</option>
                                        <option value="7">Apparel</option>
                                        <option value="8">Shoes</option>
                                        <option value="9">Jewelry</option>
                                        <option value="10">Misc</option>
                                    </select>
                                </div>
                                <label for="link">Link to Item:</label>
                                <input type="product-link" class="w-100 text-input" id="product-url"
                                    placeholder="https://amazon.com/products">
                            </form>
                            <button class="btn-primary w-100 mt-4 mb-2 btn-lg" id="add-product-btn">Add Product</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


{{!-- ARE YOU SURE YOU WANT TO DELETE MODAL --}}

<div class="modal fade" id="delete-registry" tabindex="-1" role="dialog" aria-labelledby="delete-registry"
    aria-hidden="true">
    <div class="modal-dialog shadow" role="document">
        <div class="modal-content secondary-background">
            <div class="modal-header d-flex justify-content-center">
                <p class="modal-title header-text text-shadow">Are you sure you want to delete this registry?</p>
                <div>
                    <button type="button" class="btn" data-dismiss="modal">
                        X
                    </button>
                </div>
            </div>
            <div class="modal-body d-flex justify-content-center">
                <div class="flex-row">
                    <button id="delete-btn" class="pl-5 pr-5 btn-danger flex-item btn-lg">Yes</button>
                    <button id="dont-delete" class="pl-5 pr-5 btn-primary flex-item btn-lg"
                        data-dismiss="modal">No</button>
                </div>
            </div>
        </div>
    </div>
</div>

